<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tryhu.navivelo.SelectRouteFragment">

    <org.osmdroid.views.MapView
        android:id="@+id/simplyMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </org.osmdroid.views.MapView>

    <AutoCompleteTextView
        android:id="@+id/startPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="?attr/actionBarSize"
        android:text="@string/start" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">

        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <AutoCompleteTextView
        android:id="@+id/endPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startPlace"
        android:layout_centerHorizontal="true"
        android:text="@string/end" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/endPlace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/search"
        android:theme="@style/SimpleButton" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/naviSettingsButton"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/radioButtonFast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_button_fast" />

        <RadioButton
            android:id="@+id/radioButtonSafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/radio_button_safe" />

        <RadioButton
            android:id="@+id/radioButtonTouristic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/radio_button_touristic" />


    </RadioGroup>

    <Button
        android:id="@+id/naviSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchButton"
        android:layout_centerHorizontal="true"
        android:text="@string/navi_settings_button"
        android:theme="@style/SimpleButton" />

</RelativeLayout>
