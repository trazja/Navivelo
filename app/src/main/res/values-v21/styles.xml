<resources>


    <!-- Base application theme. -->
    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!--Styl podstawowego guzika-->
    <style name="SimpleButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:button">@color/buttonColor</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:height">45dp</item>
        <item name="android:fadingEdgeLength">45dp</item>

    </style>
</resources>
